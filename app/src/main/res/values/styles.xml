<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorcircleblue</item>
        <item name="colorPrimaryDark">@color/colorcircleblue</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>
    <style name="BaseTheme" parent="AppTheme"/>
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->
    <!--toolbar的样式-->
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <!--修改toolbar的Title(大标题)颜色-->
        <item name="android:textColorPrimary">@color/colorOrange</item>
        <!--修改toolbar的subtitle(小标题)颜色-->
        <item name="subtitleTextColor">@color/colorOrange</item>
        <!--修改toolbar的图标颜色.-->
        <item name="colorControlNormal">@color/colorOrange</item>
    </style>
    <!--toolbar popup_theme的样式-->
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置背景-->
        <item name="android:background">@android:color/white</item>
        <!--设置字体颜色-->
        <item name="android:textColor">@color/colorOrange</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
    </style>
    <style name="CActionMenuTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textStyle">normal</item>
        <item name="actionMenuTextAppearance">
            @android:style/TextAppearance.Holo.Widget.ActionBar.Menu
        </item>
    </style>

    <style name="ActionBarStyle.Default" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/colorAccentss</item>
        <item name="android:height">@dimen/default_spacing_hugess</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle</item>
    </style>
    <style name="ActionBarStyle">
        <item name="android:textSize">@dimen/default_spacing_mediumss</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="TransDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="WhiteDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>
    <style name="TAB_TEXT" parent="android:Widget.TextView">
        <item name="android:drawableTop">@drawable/tab_message_btn</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--控制头部据appbar的样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <!--用于控制toolbar溢出菜单的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
   <!--tablayout-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>


    <!--MaterialSearchView-->
    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
    </style>



</resources>
