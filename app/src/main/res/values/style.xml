<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/middle_size_btn</item>
        <item name="android:layout_margin">@dimen/large_size_marge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_white_line</item>
        <item name="android:padding">@dimen/padding_btn</item>
    </style>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/middle_height_txt</item>
        <item name="android:background">@color/txt_color_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_txt</item>
        <item name="android:textColor">@color/txt_color_textColor</item>
        <item name="android:textSize">@dimen/text_size_txt</item>
    </style>

</resources>