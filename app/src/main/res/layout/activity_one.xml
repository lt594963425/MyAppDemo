<com.example.administrator.utils.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/bg" >
    <LinearLayout
        android:id="@+id/ller_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">
        <ImageView
            android:layout_width="60dip"
            android:padding="3dip"
            android:layout_height="60dip"
            android:src="@drawable/head"/>
        <ListView
            android:id="@+id/lv_leftmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <com.example.administrator.utils.MyLinnerLayout
        android:id="@+id/ller_main"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="3dip"
            android:gravity="center_vertical"
            android:background="#a50000FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_header"
                android:clickable="true"
                android:layout_width="60dip"
                android:padding="3dip"
                android:layout_height="60dip"
                android:src="@drawable/head"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="消息"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/lv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </com.example.administrator.utils.MyLinnerLayout>

</com.example.administrator.utils.DragLayout>